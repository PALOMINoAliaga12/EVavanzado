<!-- views/libros/list.hbs -->
<div class="container" style="margin-top:70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Listado de Libros</h3>

        <div style="padding: 10px;">
            <a class="btn btn-danger" href="/add">Nuevo Libro</a>
        </div>

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Título</th>
                    <th scope="col">Autor</th>
                    <th scope="col">Portada</th>
                    <th scope="col">Fecha de Publicación</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each books}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.author}}</td>
                    <td>{{this.cover}}</td>
                    <td>{{this.publication_date}}</td>
                    <td>
                        <div class="">
                            <a href="/edit/{{@index}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i>Actualizar</a>
                            <a href="/delete/{{@index}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i>Eliminar</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="5">REGISTRO DE LIBROS</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
