<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">AGREGAR PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/products/add" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">NOMBRE</label>
                            <input class="form-control" type="text" name="nomprod" id="nomprod" placeholder="Nombre del producto"
                                autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="category" class="input-group-text">CATEGORIA</label>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Seleccione un producto</option>
                                <option value="1">AUDIFONOS</option>
                                <option value="2">MOUSE</option>
                                <option value="3">TECLADO</option>
                            </select>
                        </div>
                        <div class="input-group mt-2">
                            <label for="stock" class="input-group-text">CANTIDAD</label>
                            <input class="form-control" type="text" name="stockprod" id="stockprod"
                                placeholder="Cantidad del producto" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="price" class="input-group-text">PRECIO</label>
                            <input class="form-control" type="text" name="priceprod" id="priceprod" placeholder="Precio del producto"
                                required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Guardar</button>
                            <button class="btn btn-danger"><a class="nav-link  link-light" aria-current="page"
                                    href="/products"> Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>